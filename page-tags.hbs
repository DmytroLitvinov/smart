{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#post}}
{{!-- Header --}}
<header class="{{^if feature_image}}post__no-img--container">{{else}}post__img">
    <img srcset="{{img_url feature_image size="s"}} 300w,
                 {{img_url feature_image size="m"}} 600w,
                 {{img_url feature_image size="l"}} 1000w,
                 {{img_url feature_image size="xl"}} 2000w" sizes="100vw" src="{{img_url feature_image size="xl"}}"
        alt="{{title}}">
    {{/if}}
    {{^if feature_image}}
    <div class="post__no-img"></div>
    {{/if}}
</header>
{{!-- Header --}}

{{!-- Main --}}
<main class="main index" id="main">
    <div class="outer-container">
        <div class="inner-container">
            <header class="post__header">
                <h1 class="post__title--serif underline">{{title}}</h1>
            </header>
            {{/post}}
            {{#get "tags" include="count.posts" limit="all"}}
            <section class="grid-container">
                {{#foreach tags}}
                {{!-- Card  --}}
                <article class="card--tags card-{{@number}} {{slug}}">
                    <a class="card--tags__link" href="{{url}}" aria-label="{{name}}">
                        <div class="card--tags__img-container">
                            {{#if feature_image}}
                            <img class="card--tags__img lazyload" data-srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                                data-sizes="(max-width: 640px) 90vw, (max-width: 1280px) 60vw, 1300px"
                                data-src="{{img_url feature_image size="xl"}}" alt="{{name}}" />
                            {{else}}
                            <div class="card--tags__no-img card--tags__no-img-{{@number}}"></div>
                            {{/if}}
                            <div class="card--tags__body">
                                <h2 class="card--tags__title">{{name}}</h2>
                                <p class="card--tags__date">{{count.posts}}
                                </p>
                            </div>
                        </div>
                    </a>
                </article>
                {{!-- Card  --}}
                {{/foreach}}
            </section>
            {{/get}}


        </div>
    </div>
</main>
{{!-- Main --}}
