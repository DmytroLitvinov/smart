    {{#if feature_image}}
     <header class="header-img__container">
        <figure>
            <div class="header-img__aspect-container">
            <img class="header-img__image" srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 740w,
                        {{img_url feature_image size="l"}} 1024w" sizes="(min-width: 1024px) 1024px, 100vw"
                src="{{img_url feature_image size="l"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
            </div>
            {{#if feature_image_caption}}
            <figcaption style="margin-bottom: 1rem;">{{feature_image_caption}}</figcaption>
            {{/if}}
        </figure>
    {{else}}
        <div class="header-img__no-img"></div>
    {{/if}}
    </header>

