<article class="sm-card {{#is "home"}}sm-card-{{@number}}{{/is}} {{slug}} {{#if horizontal}}sm-card-horizontal{{else}}sm-card-vertical{{/if}}">
    <a class="sm-card-link" href="{{url}}" aria-label="{{name}}">
            {{#if feature_image}}
            <picture class="">
              <source 
                srcset="
                {{img_url feature_image size="xxs" format="avif"}} 100w,
                {{img_url feature_image size="xs" format="avif"}} 300w,
                {{img_url feature_image size="s" format="avif"}} 500w,
                {{img_url feature_image size="m" format="avif"}} 800w,
                {{img_url feature_image size="l" format="avif"}} 1000w,
                {{img_url feature_image size="xl" format="avif"}} 2000w"
                sizes="(min-width: 750px) 500px, 100vw" 
                type="image/avif"
              >
              <source 
                srcset="
                {{img_url feature_image size="xxs" format="webp"}} 100w,
                {{img_url feature_image size="xs" format="webp"}} 300w,
                {{img_url feature_image size="s" format="webp"}} 500w,
                {{img_url feature_image size="m" format="webp"}} 800w,
                {{img_url feature_image size="l" format="webp"}} 1000w,
                {{img_url feature_image size="xl" format="webp"}} 2000w"
                sizes="(min-width: 750px) 500px, 100vw" 
                type="image/webp"
              >
              <img
                srcset="
                {{img_url feature_image size="xxs"}} 100w,
                {{img_url feature_image size="xs"}} 300w,
                {{img_url feature_image size="s"}} 500w,
                {{img_url feature_image size="m"}} 800w,
                {{img_url feature_image size="l"}} 1000w,
                {{img_url feature_image size="xl"}} 2000w"
                sizes="(min-width: 750px) 500px, 100vw" 
                src="{{img_url feature_image size="s"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{name}}{{/if}}"
              >
            </picture>
           {{/if}}
            
            <div class="sm-card-body">
                <div>
                    <h2 class="sm-title {{^if feature_image}}large{{/if}} {{#if premiere}}large{{/if}}">{{name}}</h2>
                    {{#if description}}
                        {{^if premiere}}
                            {{^if feature_image}}
                            <p class="sm-excerpt">{{description}}</p>
                            {{/if}}
                        {{/if}}
                        {{#if premiere}}<p class="sm-excerpt">{{description}}</p>
                        {{/if}}
                    {{/if}}
                </div>
                <div class="sm-card-footer">
                    <p class="sm-tag">{{plural count.posts empty="" singular="% post" plural="% posts"}}</p> 
                </div>
            </div>
    </a>
    
</article>