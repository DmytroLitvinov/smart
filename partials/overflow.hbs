<aside class="sm-overflow-menu">
    <div class="sm-overflow-buttons">
        {{#has any="@site.twitter, @site.facebook"}}
        <button class="sm-icon-button sm-follow-button"><svg aria-hidden="true"><use href="#sm-follow-icon"></use></svg>Follow</button>
        {{/has}}
        <button class="sm-icon-button sm-share-button"><svg aria-hidden="true"><use href="#sm-share-icon"></use></svg>Share</button>
        <button class="sm-icon-button sm-dark-mode">
            <svg aria-hidden="true"><use href="#sm-moon-icon"></use></svg>Dark mode
        </button>
        <button class="sm-icon-button sm-light-mode">
            <svg aria-hidden="true"><use href="#sm-sun-icon"></use></svg>Light mode
        </button>
        <button class="sm-icon-button sm-saves-button">
            <svg aria-hidden="true">
                <use href="#sm-heart-fill-icon"></use>
            </svg>Saves
        </button>
    </div>
    <div class="sm-overflow-follow">
        <button class="sm-overflow-back"><svg><use href="#sm-left-arrow-icon"></use></svg></button>
        {{#if @site.twitter}}
            <a class="sm-icon-button" href="{{twitter_url @site.twitter}}"><svg aria-hidden="true"><use href="#twitter-icon"></use></svg>Twitter</a>
        {{/if}}
        {{#if @site.facebook}}
            <a class="sm-icon-button" href="{{facebook_url @site.facebook}}"><svg aria-hidden="true"><use href="#facebook-icon"></use></svg>Facebook</a>
        {{/if}}
        {{#if @custom.social_media_1_url}}
            <a class="sm-icon-button" href="{{@custom.social_media_1_url}}"><svg aria-hidden="true"><use href="#{{@custom.social_media_1}}-icon"></use></svg>{{@custom.social_media_1}}</a>
        {{/if}}
        {{#if @custom.social_media_2_url}}
            <a class="sm-icon-button" href="{{@custom.social_media_2_url}}"><svg aria-hidden="true"><use href="#{{@custom.social_media_2}}-icon"></use></svg>{{@custom.social_media_2}}</a>
        {{/if}}
    </div>
    <div class="sm-overflow-share">
        <button class="sm-overflow-back"><svg><use href="#sm-left-arrow-icon"></use></svg></button>
        <button class="sm-icon-button sm-copy-button"><svg aria-hidden="true"><use href="#sm-copy-icon"></use></svg> Copy link</button>
        <a class="sm-icon-button" href="https://twitter.com/share?url={{url absolute="true"}}" aria-label="Share on Twitter" target="_blank" rel="noopener noreferrer"><svg aria-hidden="true"><use href="#twitter-icon"></use></svg>Twitter</a>
        <a class="sm-icon-button" href="http://www.linkedin.com/shareArticle?mini=true&amp;url={{url absolute='true'}}"
        aria-label="Share on LinkedIn" target="_blank" rel="noopener noreferrer"><svg aria-hidden="true"><use href="#linkedin-icon"></use></svg>Linkedin</a>
        <a class="sm-icon-button" href="http://www.facebook.com/sharer.php?u={{url absolute='true'}}"
        aria-label="Share on Facebook" target="_blank" rel="noopener noreferrer"><svg aria-hidden="true"><use href="#facebook-icon"></use></svg>Facebook</a>
    </div>
    <div class="sm-overflow-saves">
        <button class="sm-overflow-back"><svg><use href="#sm-left-arrow-icon"></use></svg></button>
        <div class="sm-overflow-articles"></div>
    </div>
</aside>
