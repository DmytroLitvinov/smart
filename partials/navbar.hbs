{{!-- Navigation bar --}}
<div class="sm-grid sm-navbar-container">

    <header class="sm-navbar">
        <div class="sm-navbar-left">
            {{#is "home"}}
            <h1 class="sm-site-title">{{@site.title}}</h1>
            {{else}}
            <p class="sm-site-title">{{@site.title}}</p>
            {{/is}}

            <div class="sm-navigation-container">
                {{navigation}}
                <div class="sm-overflow-container">
                    <button class="sm-overflow-button" aria-label="Overflow menu">
                        <svg aria-hidden="true"><use href="#sm-overflow-menu-icon"></use></svg>
                    </button>

                    {{> "overflow"}}
                </div>
            </div>


        </div>
        <div class="sm-navbar-right">
            <button class="sm-search-button" aria-label="search {{@site.title}}"><svg aria-hidden="true"><use href="#sm-search-icon"></use>
                </svg></button>
            {{^if @member}}<button class="sm-button" data-portal="signup">Subscribe</button>{{else}}<button
                class="sm-button" data-portal="account">My Account</button>{{/if}}
        </div>
    </header>
</div>