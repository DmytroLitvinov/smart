{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}
{{log pagination}}
{{#tag}}
<div class="sm-grid sm-tag-container">
    <header class="sm-tag-header">
        <p class="sm-tag-count">{{../pagination.total}} posts</p>
        <h1 class="sm-tag-name">{{name}}</h1>
        {{#if description}}
            <p>{{description}}</p>
        {{/if}}

        {{#if feature_image}}<img src="{{img_url feature_image}}">{{/if}}
    </header>
{{/tag}}

    <section class="sm-tags-container">
        {{#foreach posts}}
            {{> "card"}}
        {{/foreach}}
    </section>

{{#match pagination.pages ">" 1}}
    {{pagination}}
{{/match}}
{{log pagination.pages}}
</div>