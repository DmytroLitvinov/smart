{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}
{{#tag}}
{{!-- Post Header  --}}
<header class="{{^if feature_image}}post__no-img--container">{{else}}post__img">
    <img srcset="{{img_url feature_image size="s"}} 300w,
                 {{img_url feature_image size="m"}} 600w,
                 {{img_url feature_image size="l"}} 1000w,
                 {{img_url feature_image size="xl"}} 2000w" sizes="100vw" src="{{img_url feature_image size="xl"}}"
        alt="{{name}}" height="340">
    {{/if}}
    {{^if feature_image}}
    <div class="post__no-img"></div>
    {{/if}}
</header>
{{!-- Post Header  --}}
{{!-- Main  --}}
<main class="main" id="main">
    <div class="outer-container">
        <div class="inner-container">
            <section class="{{slug}}">
                <header class="post__header">
                    <h1 class="post__title--serif">{{name}}</h1>
                    {{#if description}}
                    <p>{{description}}</p>
                    {{/if}}
                </header>
                {{/tag}}
                <div class="grid-container">
                    {{#foreach posts}}
                    {{> "card"}}
                    {{/foreach}}
                </div>
            </section>
            {{pagination}}
        </div>
    </div>
</main>
{{!-- Main --}}