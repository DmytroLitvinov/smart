  "version": "2.0.0",
  "tasks": [
    {
      "label": "boo",
      "type": "shell",
      "command": "cd ~/Projects/ghost && ghost start",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": []
    },
    {
      "label": "set node version",
      "type": "shell", 
      "command": "nvm use",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
