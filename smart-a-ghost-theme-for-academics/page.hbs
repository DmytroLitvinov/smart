{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{navigation}}

{{#post}}

{{!-- Post Header  --}}
<header class="post-img">
    {{#if feature_image}}
    <img srcset="{{img_url feature_image size="s"}} 300w,
                 {{img_url feature_image size="m"}} 600w,
                 {{img_url feature_image size="l"}} 1000w,
                 {{img_url feature_image size="xl"}} 2000w" sizes="100vw" src="{{img_url feature_image size="xl"}}"
        alt="{{title}}">
    {{else}}<div class="no-post-img"></div>{{/if}}
</header>
{{!-- Post Header  --}}

{{!-- Main  --}}
<main id="main" class="main">
    <div class="outer-container">
        <div class="inner-container">
            <article class="{{post_class}}">

                <header class="post-header">
                    <h1 class="post-title serif">{{title}}</h1>
                </header>

                <div class="post-content">
                    {{content}}
                </div>
            </article>

            {{#if @labs.subscribers}}
            {{> "subscribe_inner"}}
            {{/if}}
        </div>
    </div>
</main>
{{!-- Main --}}

{{!-- Share Bar --}}
<div class="post-share-bar">
    <p class="post-share-bar-title">Share</p>
    <a class="post-share-bar-link twitter" href="https://twitter.com/share?url={{encode url}}&amp;text={{encode title}}"
        aria-label="Share on Twitter">
        <svg>
            <title>Share on Twitter</title>
            <use href="#twitter"></use>
        </svg>
    </a>
    <a class="post-share-bar-link facebook" href="http://www.facebook.com/sharer.php?u={{encode url}}"
        aria-label="Share on Facebook">
        <svg>
            <title>Share on Facebook</title>
            <use href="#facebook"></use>
        </svg>
    </a>
    <a class="post-share-bar-link linkedin" href="http://www.linkedin.com/shareArticle?mini=true&amp;url={{encode url}}"
        aria-label="Share on LinkedIn">
        <svg>
            <title>Share on LinkedIn</title>
            <use href="#linkedin"></use>
        </svg>
    </a>
    <button class="post-share-bar-link copy" id="copy-button" aria-label="Copy to clipboard">
        <svg>
            <title id="copyIconTitle">Copy to clipboard</title>
            <use href="#copy"></use>
        </svg>
    </button>
</div>
{{!-- Share Bar --}}
{{/post}}