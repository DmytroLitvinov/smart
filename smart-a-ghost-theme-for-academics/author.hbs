{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#author}}

{{!-- Post Header  --}}
<header class="{{^if cover_image}}post__no-img">{{else}}post__img">
    <img srcset="{{img_url cover_image size="s"}} 300w,
                 {{img_url cover_image size="m"}} 600w,
                 {{img_url cover_image size="l"}} 1000w,
                 {{img_url cover_image size="xl"}} 2000w" sizes="100vw" src="{{img_url cover_image size="xl"}}"
        alt="{{name}}">
    {{/if}}
</header>
{{!-- Post Header  --}}

{{!-- Main  --}}
<main class="main" id="main">
    <div class="outer-container">
        <div class="inner-container">
            <section class="{{slug}}">

                <header class="author__header">
                    <div class="author__container">
                        {{#if profile_image}}
                        <div class="author__img-container">
                            <img class="author__img" src="{{img_url profile_image size="m"}}" alt="{{name}}">
                        </div>
                        {{/if}}
                        <div class="author__text">
                            <div class="author__text-container">
                                <h1 class="author__name">{{name}}</h1>
                            </div>
                            {{#if location}}
                            <p class="author__small-header">Location</p>
                            <div class="author__location flex-row">
                                <svg aria-label="location">
                                    <title>Location</title>
                                    <use href="#location"></use>
                                </svg>
                                <p>{{location}}</p>
                            </div>
                            {{/if}}
                            {{#if bio}}
                            <p class="author__small-header">Bio</p>
                            <p class="author__bio">{{bio}}</p>
                            {{/if}}
                            {{#has any="twitter, facebook, website"}}
                            <p class="author__small-header">Social</p>
                            {{/has}}
                            <div class="author__meta">
                                {{#if twitter}}
                                <a class="twitter" href="{{twitter_url}}" aria-label="Twitter">
                                    <svg>
                                        <title>Twitter</title>
                                        <use href="#twitter"></use>
                                    </svg>
                                </a>
                                {{/if}}
                                {{#if facebook}}
                                <a class="facebook" href="{{facebook_url}}" aria-label="Facebook">
                                    <svg>
                                        <title>Facebook</title>
                                        <use href="#facebook"></use>
                                    </svg>
                                </a>
                                {{/if}}
                                {{#if website}}
                                <a class="website" href="{{website}}" aria-label="{{website}}">
                                    <svg>
                                        <title>{{website}}</title>
                                        <use href="#website"></use>
                                    </svg>
                                </a>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </header>

                <h2 class="underline">{{plural ../pagination.total empty='No Posts' singular='% Post' plural='% Posts'}}
                </h2>
                {{/author}}
                <div class="grid-container-home">
                    {{#foreach posts}}
                    {{> "card"}}
                    {{/foreach}}
                </div>
                {{pagination}}
            </section>

            {{#if @labs.subscribers}}
            {{> "subscribe_inner"}}
            {{/if}}
        </div>
    </div>
</main>
{{!-- Main --}}