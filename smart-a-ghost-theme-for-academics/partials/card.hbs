{{!-- Card  --}}
<article class="card card-{{@number}} {{slug}}">
    <a href="{{url}}" aria-label="{{title}}">
        {{#if feature_image}}
        <img class="card-img" alt="" loading="lazy" srcset="{{img_url feature_image size="s"}} 300w,
            {{img_url feature_image size="m"}} 600w,
            {{img_url feature_image size="l"}} 1000w,
            {{img_url feature_image size="xl"}} 2000w" sizes="(max-width: 640px) 90vw,
            (max-width: 1280px) 60vw,
            1300px" src="{{img_url feature_image size="xl"}}" />
        {{else}}
        <div class="no-image"></div>
        {{/if}}
    </a>
    <div class="card-body">
        <div class="flex-row card-date-tag">
            <p class="card-date" datetime="{{date format='YYYY-MM-DD'}}">{{date timeago="true"}}</p>
            {{#primary_tag}}<a href="{{url}}" class="card-tag flex-row hvr-bounce-to-top {{slug}}"><svg
                    aria-hidden="true">
                    <use href="#hash"></use>
                </svg>
                <p>
                    {{name}}
                </p>
            </a>{{/primary_tag}}
        </div>
        <a href="{{url}}">
            <h3 class="card-title">{{title}}</h3>
        </a>
        <p class="card-excerpt">{{excerpt}}</p>
    </div>
</article>
{{!-- Card  --}}