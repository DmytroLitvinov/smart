{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#post}}
{{!-- Header --}}
<header class="{{^if feature_image}}post__no-img">{{else}}post__img">
    <img srcset="{{img_url feature_image size="s"}} 300w,
                 {{img_url feature_image size="m"}} 600w,
                 {{img_url feature_image size="l"}} 1000w,
                 {{img_url feature_image size="xl"}} 2000w" sizes="100vw" src="{{img_url feature_image size="xl"}}"
        alt="{{title}}">
    {{/if}}
</header>
{{!-- Header --}}

{{!-- Main --}}
<main class="main index" id="main">
    <div class="outer-container">
        <div class="inner-container">
            <header class="post__header">
                <h1 class="post__title--serif underline">{{title}}</h1>
            </header>
            {{/post}}
            {{#get "tags" include="count.posts" limit="all"}}
            <section class="grid-container-home">
                {{#foreach tags}}
                {{!-- Card  --}}
                <article class="card card-{{@number}} {{slug}}">
                    <a class="card__link" href="{{url}}" aria-label="{{name}}">
                        {{#if feature_image}}
                        <img class="card__img lazyload" data-srcset="{{img_url feature_image size="s"}} 300w,
            {{img_url feature_image size="m"}} 600w,
            {{img_url feature_image size="l"}} 1000w,
            {{img_url feature_image size="xl"}} 2000w" data-sizes="(max-width: 640px) 90vw,
            (max-width: 1280px) 60vw,
            1300px" data-src="{{img_url feature_image size="xl"}}" alt="" />
                        {{else}}
                        <div class="card__no-img card__no-img-{{@number}}"></div>
                        {{/if}}
                        <div class="card__body">
                            <div class="card__date-tag">
                                <p class="card__date">{{plural count.posts empty='' singular='% post' plural='% posts'}}
                                </p>
                            </div>
                            <h3 class="card__title">{{name}}</h3>
                            <p class="card__excerpt">{{description}}</p>
                        </div>
                    </a>
                </article>
                {{!-- Card  --}}

                {{/foreach}}
            </section>
            {{/get}}


        </div>
    </div>
</main>
{{!-- Main --}}
{{#post}}
{{!-- Share Bar --}}
{{> "share"}}
{{!-- Share Bar --}}
{{/post}}