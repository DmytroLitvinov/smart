{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<main class="main">

    <div class="outer-container index">

        <div class="inner-container">
            <header class="post-header">
                <h1 class="post-title serif underline">{{meta_title}}</h1>
            </header>

            <section class="grid-container grid-container-home">

                {{#foreach posts}}
                {{> "card"}}
                {{/foreach}}

            </section>
            {{pagination}}
            <!-- End inner container  -->
        </div>

        <!-- End outer container  -->
    </div>
</main>