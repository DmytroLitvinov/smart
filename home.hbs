{{log posts.length}}

<div class="sm-grid">
    <div class="sm-inner-container sm-grid-12">
        <aside class="sm-cta">
            <h2>CTA headline</h2>
            <p>cta copy</p>

            <form action="post">
                <input type="email" placeholder="email">
                <button>subscribe</button>
            </form>

        </aside>
        {{#foreach posts from="1" to="2"}}
            
            <article class="sm-card sm-card-{{@number}}">
                <a href="{{url}}"></a>
                {{#if feature_image}}<img src="{{feature_image}}" alt="">{{/if}}
                <div>
                    <h2 class="sm-title {{^if feature_image}}large{{/if}}">{{title}}</h2>
                    {{^if feature_image}}<p class="sm-excerpt">{{excerpt}}</p>{{/if}}
                                    
                    <div class="sm-card-footer">
                    {{#if primary_tag}}<p class="sm-tag">{{primary_tag.name}}</p>{{/if}}
                    <p class="sm-reading-time">{{reading_time}}</p>
                </div>
                </div>
            </article>
        {{/foreach}}

        {{#foreach posts from="3" to="5"}}
            
