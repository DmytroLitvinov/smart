{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#tag}}

{{!-- Post Header  --}}
<header class="post-img">
    {{#if feature_image}}
    <img srcset="{{img_url feature_image size="s"}} 300w,
                 {{img_url feature_image size="m"}} 600w,
                 {{img_url feature_image size="l"}} 1000w,
                 {{img_url feature_image size="xl"}} 2000w" sizes="100vw" src="{{img_url feature_image size="xl"}}"
        alt="{{title}}">
    {{else}}<div class="no-post-img"></div>{{/if}}
</header>
{{!-- Post Header  --}}

{{!-- Main  --}}
<main id="main" class="main">
    <div class="outer-container">
        <div class="inner-container">
            <section class="{{slug}}">

                <header class="post-header">
                    <h1 class="post-title serif underline">{{name}}</h1>
                    {{#if description}}
                    <p>{{description}}</p>
                    {{/if}}
                </header>
                {{/tag}}

                <div class="grid-container grid-container-home">
                    {{#foreach posts}}
                    {{> "card"}}
                    {{/foreach}}
                </div>
            </section>

            {{#if @labs.subscribers}}
            {{> "subscribe_inner"}}
            {{/if}}
        </div>
    </div>
</main>
{{!-- Main --}}
{{#tag}}
{{> "share"}}
{{/tag}}