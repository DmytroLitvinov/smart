{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{navigation}}

{{#if @site.cover_image}}

<style type="text/css">
    .hero-img {
        background-image: url({{img_url @site.cover_image size='xl'}});
    }

    @media(max-width: 1000px) {
        .hero-img {
            background-image: url({{img_url @site.cover_image size='l'}});
            background-image: -webkit-image-set(url({{img_url @site.cover_image size='l'}}) 1x,
                url({{img_url @site.cover_image size='xl'}}) 2x);
            background-image: image-set(url({{img_url @site.cover_image size='l'}}) 1x,
                url({{img_url @site.cover_image size='xl'}}) 2x);
        }
    }

    @media(max-width: 600px) {
        .hero-img {
            background-image: url({{img_url @site.cover_image size='m'}});
            background-image: -webkit-image-set(url({{img_url @site.cover_image size='m'}}) 1x,
                url({{img_url @site.cover_image size='l'}}) 2x);
            background-image: image-set(url({{img_url @site.cover_image size='m'}}) 1x,
                url({{img_url @site.cover_image size='l'}}) 2x);
        }
    }
</style>

<div class="hero-img">

    {{/if}}

    <div class="hero-overlay navbar-test">

        <div class="hero-container flex-col">

            <h2 class="site-description-text serif">{{@site.description}}
            </h2>

            <!-- End Hero Container  -->
        </div>

        <!-- End Hero Overlay -->
    </div>

    <!-- End Hero Image -->
</div>

<!-- End Hero Wrapper -->


<main class="main">

    {{#get "posts" limit="5" include="tags" filter="featured:true" as |featured|}}
    {{#if featured}}
    <!-- Begin Featured -->
    <div class="outer-container">

        <div class="inner-container">

            <h2 class="home-page-section-header underline serif">Featured</h2>

            <section class="grid-container grid-container-home">

                {{#foreach featured}}
                {{> "card"}}
                {{/foreach}}

            </section>

            <!-- End inner container  -->
        </div>

        <!-- End outer container  -->
    </div>

    {{/if}}
    {{/get}}
    <!-- End Featured -->

    <!-- Begin Latest -->
    {{#get "posts" limit="5" include="tags" filter="featured:false+tag:-publications" as |latest|}}
    {{#if latest}}
    <div class="outer-container">

        <div class="inner-container">

            <h2 class="home-page-section-header underline serif">Latest</h2>

            <section class="grid-container grid-container-home">



                {{#foreach latest}}
                {{> "card"}}
                {{/foreach}}

            </section>

            <!-- End inner container  -->
        </div>

        <!-- End outer container  -->
    </div>

    {{/if}}
    {{/get}}
    <!-- End Latest -->

    <!-- Begin Publications -->
    {{#get "posts" limit="5" include="tags" filter="featured:false+tag:publications" as |publications|}}
    {{#if publications}}
    <div class="outer-container">

        <div class="inner-container">

            <h2 class="home-page-section-header underline serif">Publications</h2>

            <section class="grid-container grid-container-home">



                {{#foreach publications}}
                {{> "card"}}
                {{/foreach}}

            </section>

            <!-- End inner container  -->
        </div>

        <!-- End outer container  -->
    </div>

    {{/if}}
    {{/get}}
    <!-- End Publications -->

    <!-- Begin presentations -->
    {{#get "posts" limit="5" include="tags" filter="featured:false+tag:presentations+tag:-publications" as |presentations|}}
    {{#if presentations}}
    <div class="outer-container">

        <div class="inner-container">

            <h2 class="home-page-section-header underline serif">Presentations</h2>

            <section class="grid-container grid-container-home">



                {{#foreach presentations}}
                {{> "card"}}
                {{/foreach}}

            </section>

            <!-- End inner container  -->
        </div>

        <!-- End outer container  -->
    </div>

    {{/if}}
    {{/get}}
    <!-- End presentations -->