{{!-- signin Modal --}}
<aside class="modal member" id="signin" aria-expanded="false">
    <button class="member__close-btn close-btn" id="signin-close-btn" data-target="signin" title="Close signin" aria-label="close">
        <svg aria-hidden="true">
            <title>Close</title>
            <use href="#close"></use>
        </svg>
    </button>
    <div class="member__container">
    {{#if @member.paid}}
    {{!-- A logged-in, paying member shouldn't get here, but if they do. Redirect them home --}}
    <p>Paid</p>
    {{else if @member}}
    <p>Subbed</p>
    {{else }}
    {{!-- For those who have not yet subscribed --}}
        <h2 class="member__title">Sign In</h2>
        <form class="member__form" data-members-form="signin">
                <div class="member__input-container">
                    <div class="member__label-container">
                        <label class="member__label" for="signin">Email</label>
                        <input  class="member__input" data-members-email id="signin" type="email" required="true" autocomplete="false" />
                    </div>
                    <button class="member__btn" type="submit">
                        <span class="member__btn--content">Sign In</span>
                        <svg class="member__btn--loading" aria-label="Loading...">
                            <use href="#loader"></use>
                        </svg>
                        <svg class="member__btn--success" aria-label="Success!">
                            <use href="#check"></use>
                        </svg>
                    </button>
                </div>
                <div class="member__error">Please enter a valid email address!</div>
                <div class="member__success"><strong>Great!</strong> Check your inbox and click the link to confirm your subscription</div>
        </form>
        <div class="member__subtext">
            <p class="member__subtext">Don't have an account?</p>
            <button id="subtext-signup" data-target="signup">Sign Up</button>
        </div>
    {{/if}}
    </div>
</aside>
{{!-- End signin Modal --}}
