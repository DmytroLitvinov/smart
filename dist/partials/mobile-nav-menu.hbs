{{!-- Mobile Nav Menu --}}
<div class="mobile-nav-menu" id="menu" aria-expanded="false" aria-hidden="true">
    <button class="mobile-nav-menu__close-btn" aria-label="Close Menu">
        <svg aria-hidden="true">
            <title>Close Menu</title>
            <use href="#close"></use>
        </svg>
    </button>
    <div class="mobile-nav-menu__inner">
        {{#link href=@site.url class="mobile-nav-menu__title-link"}}
            <h2 class="mobile-nav-menu__title">{{@site.title}}</h2>
        {{/link}}

        {{!-- Main Navigation --}}
        {{#if @site.navigation}}
        <ul class="mobile-nav-menu__main-nav" role="menu">
            {{#foreach navigation}}
            <li class="mobile-nav-menu__main-nav-list-item"><a href="{{url}}"
                    class="mobile-nav-menu__main-nav-link hvr-underline-from-left nav-{{slug}} {{#if current}}nav-current{{/if}}">{{label}}
                </a></li>
            {{/foreach}}
        </ul>
        {{/if}}
        {{!-- End Main Navigation --}}

        {{!-- Social Media  --}}
        {{#has any="@site.twitter, @site.facebook"}}
        <div class="mobile-nav-menu__social-media">
            {{#if @site.twitter}}
            <a class="mobile-nav-menu__social-media-item twitter" href="{{twitter_url @site.twitter}}"
                aria-label="Twitter">
                <svg aria-hidden="true">
                    <title>Twitter</title>
                    <use href="#twitter"></use>
                </svg>
            </a>
            {{/if}}
            {{#if @site.facebook}}
            <a class="mobile-nav-menu__social-media-item facebook" href="{{facebook_url @site.facebook}}"
                aria-label="Facebook">
                <svg aria-hidden="true">
                    <title>Facebook</title>
                    <use href="#facebook"></use>
                </svg>
            </a>
            {{/if}}
        </div>
        {{/has}}
        {{!-- End Social Media --}}

    </div>
</div>
{{!-- End Mobile Nav Menu --}}