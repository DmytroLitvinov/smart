<!-- Begin card  -->
<article class="card card-{{@number}}">
    <a href="{{url}}" aria-label="{{title}}">
    {{#if feature_image}}
        <img class="card-image" alt="" loading="lazy"
            srcset="{{img_url feature_image size="s"}} 300w,
            {{img_url feature_image size="m"}} 600w,
            {{img_url feature_image size="l"}} 1000w,
            {{img_url feature_image size="xl"}} 2000w" 
            sizes="(max-width: 640px) 90vw,
            (max-width: 1280px) 60vw,
            1300px"
            src="{{img_url feature_image size="xl"}}" />
    {{else}}
        <div class="no-image"></div>
    {{/if}}
    </a>
    <div class="card-body">
        <div class="flex-row card-date-tag">
            <p class="card-date" datetime="{{date format='YYYY-MM-DD'}}">{{date timeago="true"}}</p>
            {{#primary_tag}}<a class="card-tag" href="{{url}}" class="">{{name}}</a>{{/primary_tag}}
        </div>
        <a href="{{url}}">
            <h3 class="card-title">{{title}}</h3>
        </a>
        <p class="card-excerpt">{{excerpt}}</p>
    </div>
</article>
<!-- End Card  -->