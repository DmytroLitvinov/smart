{{!-- Card  --}}
<article class="card card-{{@number}} {{slug}}">
    <a class="card__link" href="{{url}}" aria-label="{{title}}">
        <div class="card__img-container">
            {{#if feature_image}}
            <img class="card__img lazyload" data-srcset="{{img_url feature_image size="s"}} 300w,
            {{img_url feature_image size="m"}} 600w,
            {{img_url feature_image size="l"}} 1000w,
            {{img_url feature_image size="xl"}} 2000w" data-sizes="(max-width: 640px) 90vw,
            (max-width: 1280px) 60vw,
            1300px" data-src="{{img_url feature_image size="xl"}}" alt="" />
            {{else}}
            <div class="card__no-img card__no-img-{{@number}}"></div>
            {{/if}}
        </div>
        <div class="card__body">
            <div class="card__date-tag">
                <p class="card__date" datetime="{{date format='YYYY-MM-DD'}}">{{date format='DD MMMM YYYY'}}</p>
            </div>
            <h3 class="card__title">{{title}}</h3>
            {{!-- <p class="card__excerpt">{{excerpt characters="75"}}</p> --}}
            {{#primary_tag}}
            <div class="card__tag {{slug}}">
                <svg aria-hidden="true">
                    <use href="#hash"></use>
                </svg>
                <p>{{name}}</p>
            </div>
            {{/primary_tag}}
        </div>
    </a>
</article>
{{!-- Card  --}}