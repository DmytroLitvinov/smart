{{!-- Search Modal --}}
    <aside class="modal" id="search-modal" role="search" aria-expanded="false" aria-hidden="true">
        <button class="modal__close-btn close-btn" title="Close Search" aria-label="close">
            <svg aria-hidden="true">
                <title>Close</title>
                <use href="#close"></use>
            </svg>
        </button>
        <div class="modal__container">
            <header class="modal__header">
                <label for="search">Search</label>
            </header>
            <div class="modal__inner-container">
                <div class="modal__input-container">
                    <input class="modal__input" id="search-input" type="text" placeholder="I'm looking for..."
                        aria-label="Enter your search term" autocomplete="off">
                    <button class="modal__btn" type="button" id="run-search-btn" aria-label="search">Search</button>
                </div>
                <div class="search-results">
                    <header class="search-results__header"></header>
                    <div class="search-results__container"></div>
                </div>
            </div>
        </div>
    </aside>
    {{!-- Search Modal --}}