                    <h2 class="st-site-description-text">{{@site.description}}</h2>

                    <!-- End Site Description -->
                </section>

                <!-- End Hero Container  -->
            </div>

            <!-- End Hero Overlay -->
        </div>

        <!-- End Hero Image -->
    </div>

