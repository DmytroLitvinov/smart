{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<section class="subscribe page">
    <div class="inner-container">
        <div class="modal-inner flex-col">
            <a href="{{#if subscribed_url}}{{subscribed_url}}{{else}}{{@site.url}}{{/if}}" class="go-back">BACK</a>
            {{^if success}}
            <header>
                <h1 class="serif">Subscribe</h1>
                <p>Don't miss what happens next!</p>
            </header>

            {{!-- subscribe_form partial --}}
            {{subscribe_form input_class="modal-input"}}
            {{!-- subscribe_form partial --}}

            {{else}}
            <header>
                <h1 class="serif">You&apos;re subscribed!</h1>
            </header>
            <p> You've successfully subscribed to <em>{{@site.title}}</em>
                with the email address <em>{{email}}</em>.</p>
            {{/if}}
        </div>
    </div>
</section>