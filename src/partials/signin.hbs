{{!-- signin Modal --}}
<aside class="modal member" id="signin" aria-expanded="false" aria-hidden="true">
    <button class="member__close-btn close-btn" id="signin-close-btn" data-target="signin" title="Close signin" aria-label="close">
        <svg aria-hidden="true">
            <title>Close</title>
            <use href="#close"></use>
        </svg>
    </button>
    <div class="member__container">
    {{#if @member.paid}}
    {{!-- A logged-in, paying member shouldn't get here, but if they do. Redirect them home --}}
    <script>window.location = '{{@site.url}}';</script>
    {{else if @member}}
    {{!-- For those who have subscribed but who haven't paid --}}
        {{!-- Logged in, not paying: Check out --}}
        <div class="checkout-form">
            <h1 class="checkout-title">Choose your subscription</h1>
            <p>Unlock full access to {{@site.title}} and see the entire library of members-only content & updates</p>
            <div class="checkout-box">
                <div class="checkout-plan">
                    <header class="checkout-plan-header">
                        <h3>Monthly</h3>
                        <span>{{@price.currency_symbol}}</span><strong>{{@price.monthly}}</strong> / month
                    </header>
                    <div class="checkout-plan-content">
                        <ul>
                            <li>Full access to all private posts</li>
                            <li>Regular updates with new content</li>
                            <li>Support independent publishing</li>
                            <li>Simple, secure card payment</li>
                        </ul>
                        <a class="button primary fit" href="javascript:" data-members-plan="Monthly">Choose this plan</a>
                    </div>
                </div>
                <div class="checkout-plan">
                    <header class="checkout-plan-header">
                        <h3>Yearly</h3>
                        <span>{{@price.currency_symbol}}</span><strong>{{@price.yearly}}</strong> / year
                    </header>
                    <div class="checkout-plan-content">
                        <ul>
                            <li>Full access to all private posts</li>
                            <li>Regular updates with new content</li>
                            <li>Support independent publishing</li>
                            <li>Simple, secure card payment</li>
                            <li>One easy payment instead of 12!</li>
                        </ul>
                        <a class="button primary fit" href="javascript:" data-members-plan="Yearly">Choose this plan</a>
                    </div>
                </div>
            </div>
        </div>

    {{else }}
    {{!-- For those who have not yet subscribed --}}
        <h2 class="member__title">Sign In</h2>
        <form class="member__form" data-members-form="signin">
                <div class="member__input-container">
                    <div class="member__label-container">
                        <label class="member__label" for="signin">Email</label>
                        <input  class="member__input" data-members-email id="signin" type="email" required="true" autocomplete="false" />
                    </div>
                    <button class="member__btn" type="submit">
                        <span class="member__btn--content">Sign In</span>
                        <svg class="member__btn--loading" aria-label="Loading...">
                            <use href="#loader"></use>
                        </svg>
                        <svg class="member__btn--success" aria-label="Success!">
                            <use href="#check"></use>
                        </svg>
                    </button>
                </div>
                <div class="member__error">Please enter a valid email address!</div>
                <div class="member__success"><strong>Great!</strong> Check your inbox and click the link to confirm your subscription</div>
        </form>
        <div class="member__subtext">
            <p class="member__subtext">Don't have an account?</p>
            <button id="subtext-subscribe" data-target="subscribe">Subscribe</button>
        </div>
    {{/if}}
    </div>
</aside>
{{!-- End signin Modal --}}
