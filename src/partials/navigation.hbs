{{#if isSecondary}}
{{#foreach navigation}}
<a class="mobile-nav-menu__social-media-item {{slug}}" href="{{url}}" aria-label="{{label}}">
    <svg aria-hidden="true">
        <title>{{label}}</title>
        <use href="#{{slug}}"></use>
    </svg>
</a>
{{/foreach}}
{{else}}
{{!-- Mobile Navbar --}}
<nav class="navbar-mobile">
    <div class="navbar-mobile__left">
        <button class="navbar-mobile__hamburger-btn" id="menu-btn" data-target="menu" aria-label="menu">
            <svg aria-hidden="true">
            <title>Menu</title>
            <use href="#menu-icon"></use>
    </svg>
        </button>
        <a class="navbar-mobile__site-title--serif" href="{{@site.url}}" aria-labelledby="site-title">
            {{#if @site.icon}} <img src="{{@site.icon}}" alt="">{{/if}}
            <p class="{{#is "home"}}site-title{{/is}}" id="site-title-mobile">{{@site.title}}</p>
        </a>
    </div>
    <div class="navbar-mobile__right">
        {{!-- Member functionality --}}
        {{#if @labs.members}}
        {{#if @member}}
        <button class="navbar-mobile__right-item--member-button" id="m-account-btn" data-target="account">
            {{#if @member.avatar_image}}
                <img class="navbar-mobile__right-item--avatar" src="{{@member.avatar_image}}" />
            {{else}}
                <div class="navbar-mobile__right-item--no-member-avatar"></div>
            {{/if}}
        </button>
        {{else}}
            <button class="navbar__right-item--signin hvr-underline-from-left" id="m-signin-btn" data-target="signin">Sign In</button>
            <button class="navbar__right-item--signup" id="m-signup-btn" data-target="signup">Sign Up</button>
        {{/if}}
        {{/if}}
        {{!-- End Member functionality --}}
        <button class="color-mode-btn light" aria-label="Toggle light mode">
            <svg aria-hidden="true">
                <title>Toggle Light Mode</title>
                <use href="#sun"></use>
            </svg>
        </button>
        <button class="color-mode-btn dark" aria-label="Toggle dark mode">
            <svg aria-hidden="true">
                <title>Toggle Dark Mode</title>
                <use href="#moon"></use>
            </svg>
        </button>
        <button class="navbar-mobile__search-btn" id="m-search-btn" data-target="search-modal" aria-label="Search {{@site.title}}">
            <svg aria-hidden="true">
                <title>Search {{@site.title}}</title>
                <use href="#search"></use>
            </svg>
        </button>
    </div>
</nav>
{{!-- End Mobile Navbar --}}

{{!-- Mobile Nav Menu --}}
{{> "mobile-nav-menu"}}
{{!-- End Mobile Nav Menu --}}

{{!-- Navbar --}}
<nav class="navbar">
    <div class="navbar__left">
        <a class="navbar__brand--serif" href="{{@site.url}}" aria-labelledby="site-title">
            {{#if @site.icon}}<img src="{{@site.icon}}" alt="">{{/if}}
            <p class="{{#is "home"}}site-title{{/is}}" id="site-title">{{@site.title}}</p>
        </a>
    </div>


    <div class="navbar__right">
        <div class="navbar__center">
            {{#if @site.navigation}}
            <ul class="navbar__ul" role="menu">
                {{#foreach navigation}}
                <li class="navbar__list-item"><a href="{{url}}"
                        class="navbar__list-link hvr-underline-from-left nav-{{slug}} {{#if current}}nav-current{{/if}}">{{label}}</a>
                </li>
                {{/foreach}}
            </ul>
            {{/if}}
        </div>
        {{!-- Member functionality --}}
        {{#if @labs.members}}
        {{#if @member}}
        <button class="navbar__right-item--member-button" id="account-btn" data-target="account">
            {{#if @member.avatar_image}}
                <img class="navbar__right-item--avatar" src="{{@member.avatar_image}}" />
            {{else}}
                <div class="navbar__right-item--no-member-avatar"></div>
            {{/if}}
        </button>
        {{else}}
            <button class="navbar__right-item--signin hvr-underline-from-left" id="signin-btn" data-target="signin">Sign In</button>
            <button class="navbar__right-item--signup" id="signup-btn" data-target="signup">Sign Up</button>
        {{/if}}
        {{/if}}
        {{!-- Member functionality --}}
        {{#if @site.twitter}}
        <a class="navbar__right-item twitter" href="{{twitter_url @site.twitter}}" aria-label="Twitter">
            <svg aria-hidden="true">
                <title>Twitter</title>
                <use href="#twitter"></use>
            </svg>
        </a>
        {{/if}}
        {{#if @site.facebook}}
        <a class="navbar__right-item facebook" href="{{facebook_url @site.facebook}}" aria-label="Facebook">
            <svg aria-hidden="true">
                <title>Facebook</title>
                <use href="#facebook"></use>
            </svg>
        </a>
        {{/if}}
        <button class="color-mode-btn light" aria-label="Toggle light mode">
            <svg aria-hidden="true">
                <title>Toggle Light Mode</title>
                <use href="#sun"></use>
            </svg>
        </button>
        <button class="color-mode-btn dark" aria-label="Toggle dark mode">
            <svg aria-hidden="true">
                <title>Toggle Dark Mode</title>
                <use href="#moon"></use>
            </svg>
        </button>
        <button class="navbar__right-item--search" id="search-btn" data-target="search-modal" aria-label="Search {{@site.title}}">
            <svg aria-hidden="true">
                <title>Search {{@site.title}}</title>
                <use href="#search"></use>
            </svg>
        </button>
    </div>
</nav>
{{!-- End Navbar --}}
{{/if}}